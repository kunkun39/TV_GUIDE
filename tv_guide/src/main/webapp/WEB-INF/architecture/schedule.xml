<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:task="http://www.springframework.org/schema/task"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/task
           http://www.springframework.org/schema/task/spring-task-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd
            ">

    <context:component-scan base-package="com.changhong"/>

    <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:database.properties</value>
                <value>classpath:application.properties</value>
            </list>
        </property>
    </bean>

    <bean id="briefingManageTimer" class="com.changhong.system.timer.BriefingManageTimer"/>

    <bean id="cronJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="briefingManageTimer"/>
        <property name="targetMethod" value="briefingManage"/>
        <property name="concurrent" value="false"/>
    </bean>

    <bean id="cronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="cronJobDetail"/>
        <property name="cronExpression">
            <value>${application.briefing.manage.cron}</value>
        </property>
    </bean>
    
    
    <bean id="copyDailyTaskManageTimer" class="com.changhong.system.timer.CopyDailyTaskManagerTimer"/>

    <bean id="copyDailyTaskJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="copyDailyTaskManageTimer"/>
        <property name="targetMethod" value="copyDailyTaskManage"/>
        <property name="concurrent" value="false"/>
    </bean>
    
    <bean id="copyDailyTaskTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="copyDailyTaskJobDetail"/>
        <property name="cronExpression">
            <value>${application.capydailytask.manage.cron}</value>
        </property>
    </bean>
    
    <bean id="exceedTaskManageTimer" class="com.changhong.system.timer.ExceedTasksManageTimer"/>

    <bean id="exceedTaskJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="exceedTaskManageTimer"/>
        <property name="targetMethod" value="exceedTaskManage"/>
        <property name="concurrent" value="false"/>
    </bean>
    
   <bean id="exceedTaskTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="exceedTaskJobDetail"/>
        <property name="cronExpression">
            <value>${application.exceedtask.manage.cron}</value>
        </property>
    </bean>

    <bean id="autoTaskTrigger" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="cronTrigger"/>
                <ref bean="copyDailyTaskTrigger"/>
            </list>
        </property>
        <property name="autoStartup" value="true"/>
        <property name="schedulerName" value="cronScheduler"/>
    </bean>

</beans>